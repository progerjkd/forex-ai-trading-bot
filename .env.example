# OANDA API Configuration
OANDA_API_KEY=your_oanda_api_key_here
OANDA_ACCOUNT_ID=your_account_id_here
OANDA_ENVIRONMENT=practice  # practice or live

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini  # gpt-4o-mini for cost-effective analysis

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Database Configuration (Local Development)
DATABASE_URL=postgresql://forex_user:forex_pass@localhost:5432/forex_trading
TIMESCALEDB_ENABLED=true

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_MODELS=forex-bot-models
S3_BUCKET_BACKTEST=forex-bot-backtest

# Trading Configuration
TRADING_PAIRS=EUR/USD,GBP/USD,USD/JPY
PAPER_TRADING=true
INITIAL_CAPITAL=10000
MAX_POSITIONS=3
RISK_PER_TRADE=0.01  # 1% of capital
DAILY_LOSS_LIMIT=0.03  # 3% of capital

# ML Configuration
ML_CONFIDENCE_THRESHOLD=0.65
ML_MODEL_VERSION=v1

# LLM Configuration
LLM_MAX_CALLS_PER_DAY=10
LLM_ENABLE_REGIME_ANALYSIS=true
LLM_ENABLE_NEWS_SENTIMENT=true
LLM_ENABLE_PERFORMANCE_REVIEW=true

# Application Configuration
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO
DEBUG=true
